---
import type { PageNameType } from '../types/types';
import Nav from '../components/Nav';

export interface Props {
  title: string;
  pageName: PageNameType;
}

const { title, pageName } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='icon'
      type='image/svg+xml'
      href=`${import.meta.env.BASE_URL}/favicon.svg`
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-neutral-800'>
    <Nav
      client:load
      items={[
        {
          url: `${import.meta.env.BASE_URL}`,
          text: 'Home',
          active: pageName === 'home',
        },
        {
          url: `${import.meta.env.BASE_URL}case_studies`,
          text: 'Case Studies',
          active: pageName === 'case_studies',
        },
        { url: '#contacit', text: 'Contacts', active: pageName === 'contacts' },
      ]}
    />
    <main id='page-content'>
      <div class='flex w-full flex-col'>
        <slot />
      </div>
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }

  img {
    pointer-events: none;
  }
</style>

