---
import type { ExperienceProps as Props } from '../types/types';

const { items } = Astro.props;
---

<ol class='relative border-l border-gray-700'>
  {
    items.map((exp) => (
      <li class='mb-6 ml-4'>
        <div class='absolute w-3 h-3 rounded-full mt-1.5 -left-1.5 border border-gray-900 bg-gray-600' />
        <time class='mb-1 text-sm font-normal leading-none text-gray-500'>
          {exp.start}
          {' - '}
          {exp.now ? 'now' : exp.end} {` (${exp.end - exp.start} years)`}
        </time>
        <h3 class='text-lg font-semibold text-slate-200'>{exp.position}</h3>
        <p class='text-base font-normal text-gray-400'>at {exp.company}</p>
      </li>
    ))
  }
</ol>
